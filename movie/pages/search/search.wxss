.search-box {
  background-color: #ff0000;
  padding:30rpx;
  display: flex;

}
.search-inp {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-cont{
  height: 100%;
  width: 100%;
  padding-left: 30rpx;
  font-size: 28rpx;
}
.search-btn {
  margin-left:20rpx ;
  width: 150rpx;
  height: 60rpx;
  font-size: 30rpx;
  border:1px solid #fff;
  text-align: center;
  line-height: 60rpx;
  border-radius: 20rpx;
  color: #fff;
}

.results {
  padding: 20rpx;
  /* border-bottom:1px solid #999; */
}

.item {
  padding: 10rpx 0;
  border-bottom:1px solid #999 ;
  display: flex;
  justify-content: flex-start;
}
.item > image{
  height: 200rpx;
  width: 150rpx;
  margin-right: 20rpx;
}
.info {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.info > text {
  font-size: 26rpx;
  color: #666;
}
.info .cur {
  font-size: 30rpx;
  color: #333;
}

.btn {
  background-color: red;
}
.noCont {
  height: 40rpx;
  margin-top: 20rpx;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}
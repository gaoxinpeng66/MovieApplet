page {
  background-color: #c9c9c9;
}

.box-header {
  width: 100%;
  /* color: #fff; */
  display: flex;
  padding: 30rpx;
  background-color: #fff;
}

.item-img {
  width: 200rpx;
  height: 300rpx;
}

.item-right {
  margin-left: 50rpx;
}

.item-name {
  font-size: 38rpx;
  margin-bottom: 50rpx;
}


.item-cont {
  font-size: 30rpx;
  margin-bottom: 28rpx;
}

.item-name>text {
  display: inline-block;
  text-align: center;
  line-height: 35rpx;
  height: 35rpx;
  width: 120rpx;
  font-size: 25rpx;
  background-color: #999;
}
.item-floot{
  display: flex;
}
.item-btn {
  width: 200rpx;
  height: 70rpx;
  border-radius: 20rpx;
  background-color: rgb(139, 122, 122);
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.item-btn>image {
  width: 50rpx;
  height: 50rpx;
  padding-left: 20rpx;
}

.item-btn>view {
  padding-left: 20rpx;
  color: #fff;
  font-size: 30rpx;
}

.sc {
  margin-top: 30rpx;
  height: 200rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sc-box {
  display: flex;
 
}

.sc-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 100rpx;
  background-color: rgb(165, 47, 47);
  border-radius: 20rpx;
  color: #fff;
  font-size: 30rpx;
  margin-right: 30rpx;
}

.sc-box .cursc {
  font-size: 38rpx;
  color: red;
}

.summary-box {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx;
}

.summary-header {
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.summary-header .header-left {
  width: 140rpx;
  height: 80rpx;
  font-size: 35rpx;
}

.summary-header .header-right {
  width: 140rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ico_img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.ico_text {
  font-size: 30rpx;
}

.summary-info {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.currSummary {
  display: block;
  height: auto;
}

.stills-box {
  background-color: #fff;
  margin-top: 30rpx;
}

.stills-header {
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  border-bottom: 1px solid #999;
}

.stills-scroll {
  display: flex;
}

.stills-item {
  margin: 0 15rpx;
}

.stills-item .item-img {
  width: 360rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.floot-box{
  background-color: #fff;
  position:fixed; 
  bottom:10rpx;
  width: 750rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.noYong {
  width: 100%;
  height:200px;
}
.floot-box .btn{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 700rpx;
  height: 80rpx;
  background-color: red;
  font-size: 30rpx;
  color: #fff;
  border-radius: 30rpx;
}
.floot-box .btnCur{
  background-color: green;
}